#!/bin/bash
set -e

# Paths
DEVELOPMENT_DIR="$HOME/Development"
REPOSITORY_DIR="$DEVELOPMENT_DIR/repository"
ALTF4LLC_DIR="$REPOSITORY_DIR/github.com/ALT-F4-LLC"

# Install Ansible
if ! [ -x "$(command -v ansible)" ]; then
  sudo pacman -S ansible --noconfirm
fi

# Generate SSH keys
if ! [[ -f "$HOME/.ssh/authorized_keys" ]]; then
  mkdir -p "$HOME/.ssh"

  chmod 700 "$HOME/.ssh"

  ssh-keygen -b 4096 -t rsa -f "$HOME/.ssh/id_rsa" -N "" -C "$USER@$HOSTNAME"

  cat "$HOME/.ssh/id_rsa.pub" >> $HOME/.ssh/authorized_keys
fi

# Clone repository
mkdir -p $ALTF4LLC_DIR

if ! [[ -d "$ALTF4LLC_DIR/dotfiles" ]]; then
  git clone "https://github.com/ALT-F4-LLC/dotfiles.git" "$ALTF4LLC_DIR/dotfiles"
else
  git -C "$ALTF4LLC_DIR/dotfiles" pull
fi

# Create path
cd "$ALTF4LLC_DIR/dotfiles"

# Update Galaxy
ansible-galaxy install -r requirements.yml

# Run playbook
ansible-playbook --extra-vars "@$HOME/.config/dotfiles/values.yaml" "$ALTF4LLC_DIR/dotfiles/main.yaml" -D
